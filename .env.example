# LangSmith Configuration (Optional - for debugging and monitoring)
export LANGSMITH_TRACING=true
export LANGSMITH_ENDPOINT=https://api.smith.langchain.com
export LANGSMITH_API_KEY=your_langsmith_api_key_here
export LANGSMITH_PROJECT=sar-multi-agent

# Tavily Search API Key (Required for web search)
export TAVILY_API_KEY=your_tavily_api_key_here

# SAR Data Storage Paths (comma-separated, first path used for downloads)
# Customize these paths based on your system configuration
export SAR_DATA_PATHS=/mnt/sar,/home/mjh/sar_data,/data/sar

# Earthdata Credentials (Optional - for SAR data download)
export EARTHDATA_USERNAME=your_username
export EARTHDATA_PASSWORD=your_password
